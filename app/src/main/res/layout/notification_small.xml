<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/notify_song_art"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/background_transparent" />

    <ImageButton
        android:id="@+id/notify_skip_previous"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/notify_play_button"
        android:background="#0000"
        android:src="@drawable/ic_skip_previous" />

    <ImageView
        android:id="@+id/notify_play_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/notify_skip_next"
        android:background="#0000"
        android:src="@drawable/ic_pause_circle" />

    <ImageButton
        android:id="@+id/notify_skip_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:src="@drawable/ic_skip_next" />

</RelativeLayout>